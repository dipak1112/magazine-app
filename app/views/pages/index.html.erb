<h1>Listing pages</h1>
<% if @pages.present? %>
  <table class="table table-striped">
    <tr>
      <th>Content</th>
      <th>Book</th>
      <th></th>
      <th colspan="3">Actions</th>
    </tr>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.content.truncate(50).html_safe %></td>
        <td><%= page.book_id %></td>
        <td><%= link_to 'Show', book_chapter_page_path(page.book,page.chapter,page) %></td>
        <td><%= link_to 'Edit', edit_book_chapter_page_path(page.book,page.chapter,page) %></td>
        <td>
          <%= link_to 'Destroy', book_chapter_page_path(page.book,page.chapter,page), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<br /><%= link_to 'New Page', new_book_chapter_page_path(@book,@chapter) %>
